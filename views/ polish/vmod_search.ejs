<!doctype html><!-- vmod_search: 基礎語彙検索 -->
<html lang="jp">
  <head>
    <% const ROOT = `${process.cwd()}`; %>
    <%- include(`${ROOT}/views/partials/head`) %>
  </head>
  <body>
    <%- include(`${ROOT}/views/partials/header`); %>
    <main class="container">
      <div class="row">
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
          <ol class="breadcrumb bg-secondary">
            <li class="breadcrumb-item"><a href="/polish" class="first-item">ポーランド語</a></li>
            <li class="breadcrumb-item active">語彙モジュール</li>
            <li class="breadcrumb-item active" aria-current="page"><a href="/vmod">検索(日・ポ)</a></li>
          </ol>
        </nav>
        <%- include(`${ROOT}/views/partials/sidebar`); %>
        <div class="col">
            <h1>基礎語彙検索（日・ポ）</h1>
            <div class="explain">
              <ol>
                <li>検索したい言語をタブで選択する</li>
                <li>「検索」をクリックする</li>
              </ol>
              <p>*結果は「ポーランド語」「日本語」「分類」に分かれています（分類は「基礎語彙分類表」に準拠）</p>
              <p><strong>＊次の単語を検索する時は必ず「リセット」をクリックしてください</strong></p>
            </div>
            <div class="tab_box">
  	           <div class="btn_area">
                 <button type="button" class="btn tab_btn active" id="defo-tab">検索</button>
               </div>
               <div class="panel_area container" id="tab-area">
                 <div class="tab_panel active" id="defo-panel">
                   <p>単語を入力してください　　 候補：<span id="inputCand">0</span>件</p>
                   <div class="row">
                     <div class="col-7">
                        <input type="text" class="form-control col-auto" id="keyword">
                      </div>
                      <div class="col-3">
                        <button class="btn btn-outline-primary col-auto" id="search-btn">検索</button>
                      </div>
                   </div>
                 </div>
               </div>
             </div>
             <div class="search-result-area container">
               <div class="row">
                 <div class="col">
                   <h4>検索結果</h4>
                 </div>
                 <div class="col float-end">
                   <button class="btn btn-outline-primary" id="reset-btn">リセット</button>
                 </div>
                 <div class="container">
                   <div class="form-check form-switch form-check-inline float-end">
                     <input type="checkbox" class="form-check-input" name="inlineRadioOptions" role="switch" value="option2" id="open-jpn" checked>
                     <label for="inlineRadio2" class="form-check-label">日本語</label>
                   </div>
                   <div class="form-check form-switch form-check-inline float-end">
                     <input type="checkbox" class="form-check-input" name="inlineRadioOptions" role="switch" value="option1" id="open-pl" checked>
                     <label for="inlineRadio1" class="form-check-label">ポーランド語</label>
                   </div>
                   <div class="result-table container row">
                     <div class="card" id="result">
                       <table class="table table-borderless text-center">
                         <thead class="">
                           <tr class="border-bottom bg-light">
                             <th scope="col">ポーランド語</th>
                             <th scope="col">日本語</th>
                             <th scope="col">分類</th>
                           </tr>
                         </thead>
                         <tbody>
                           <tr>
                             <td class="t_pl" id="pl" data-href=""></td>
                             <td class="t_jpn" id="jpn"></td>
                             <td id="category"></td>
                           </tr>
                         </tbody>
                       </table>
                     </div>
                   </div>
                 </div>
               </div>
             </div>
        </div>
      </div>
      </main>
      <footer><%- include(`${ROOT}/views/partials/footer`); %></footer>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script>
      var word_obj1 = <%- JSON.stringify(word_obj1) %>;
      var word_obj2 = <%- JSON.stringify(word_obj2) %>;
      var word_obj3 = <%- JSON.stringify(word_obj3) %>;
      var category1 = <%- JSON.stringify(category1) %>;
      var category2 = <%- JSON.stringify(category2) %>;
      var categories = category1.concat(category2)
      var word_objs = Object.entries(word_obj1).concat(Object.entries(word_obj2)).concat(Object.entries(word_obj3))
      var words_list = [];
      var targetURL = "";
      var url = "";
      var numbers = "";
      for (var i = 0; i < word_objs.length; i++) {
        word_objs[i][1].forEach((item, i) => {
          words_list.push(item[0])
          words_list.push(item[1])
        });
      }
      //オートコンプリート
      $(function() {
        $("#keyword").autocomplete({
          source: function(request, response) {
            var list = [];
            list = words_list.filter(function (word) {
              return word.indexOf(request.term) === 0 || word.toLowerCase().indexOf(request.term) === 0;
            });
            response(list);
            $("#inputCand").text(list.length)
          },
        });
      });
      $("#keyword").keyup(function(){
        if($("#keyword").val().length === 0){
          $("#inputCand").text("0")
        }
      });
      var category = ""
      //検索ボタン
      function ja2Bit ( str ) {
        return ( str.match(/^[\u30a0-\u30ff\u3040-\u309f\u3005-\u3006\u30e0-\u9fcf]+$/) )? true : false
      }
      $("#search-btn").click(function(){
        if ($("#pl").text() != "") {
           ;
        } else {
          var targetWord = $("#keyword").val();
          if (targetWord === "") {
            swal({
              text: "単語を入力してください"
　           });
          } else if (targetWord.length > 0) {
            var targetItem;
            if (ja2Bit(targetWord) == true) { //日本語の場合
              for (var i = 0; i < word_objs.length; i++) {
                word_objs[i][1].forEach((item) => {
                  if (targetWord === item[1]) {
                    targetItem = item;
                    targetItem.push(word_objs[i][0])
                  }
                });
              }
            }else if (ja2Bit(targetWord) == false) { //アルファベットの場合
              for (var i = 0; i < word_objs.length; i++) {
                word_objs[i][1].forEach((item) => {
                  if (targetWord === item[0]) {
                    targetItem = item;
                    targetItem.push(word_objs[i][0])
                  }
                });
              }
            }
          }
        if (categories.find(element => element === targetItem[2])) {
          targetURL = "vmod_catego#"+targetItem[2]
          url = "/vmod_detail_kiso"
        } else {
          var targetURL = "vmod_table#"+targetItem[2]
          url = "/vmod_detail"
        }
        $("#pl").append(targetItem[0])
        $("#pl").data("href", url);
        $("#jpn").append(targetItem[1])
        $("#category").append('<a href='+targetURL+'>'+targetItem[2]+'</a>')
        }
      });
      //詳細へのリンク
      $("#pl").click(function() {
        var targetCategory = $("#category").text()
        var targetPl = $("#pl").text()
        var targetData = '<input type="hidden" name="category" value="' + targetCategory + '" /><input type="hidden" name="pl_word" value="' + targetPl + '" />'
        $("body").append('<form action="'+url+'" method="post" id="post">'+targetData+'</form>');
        $("#post").submit();
      });
      //リセットボタン
      $(function (){
        $("#reset-btn").on("click", function(){
          clearFrom();
        });
        function clearFrom() {
          $("#keyword").val("");
          $("#result").children("table").find("td").empty();
        }
      });
      //表示切り替え
      $("#open-jpn").change(function() {
        if ($(this).prop("checked") == false) {
          $(".t_jpn").css("visibility", "hidden");
        } else {
          $(".t_jpn").css("visibility", "visible");
        }
      });
      $("#open-pl").click(function() {
        if ($(this).prop("checked") == false) {
          $(".t_pl").css("visibility", "hidden");
        } else {
          $(".t_pl").css("visibility", "visible");
        }
      });
    </script>
    <style>
      .t_pl {
        cursor: pointer;
      }
      .t_pl:hover {
        background-color: #e9ecef;
      }
      table {
        table-layout: fixed;
      }
    </style>
  </body>
</html>
