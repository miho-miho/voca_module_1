<!doctype html>
<html lang="jp">
<head>
  <%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/header') %>
    <main class="container">
      <div class="row">
      <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb bg-secondary">
          <li class="breadcrumb-item"><a href="/" class="first-item">東外大言語モジュール top</a></li>
          <li class="breadcrumb-item active"><a href="/mt/<%- lg %>/"><%= lang_jp %></a></li>
        </ol>
      </nav>
      <%- include('../partials/sidebar'); %>
      <div class="col">
        <div class="card">
          <div class="card-header">
            <h2 class="card-title"><%= lang %></h2><span class="float-end"><%= lang_jp %></span>
          </div>
        </div>
        <div class="card">
          <div class="card-header">
            <p class="card-title"><%= lang_jp %>の使用地域と人口</p>
          </div>
          <div class="card-body">
            <p class="card-text"><%= message1 %></p>
          </div>
        </div>
        <div class="card">
          <div class="card-header">
            <p class="card-title">ここで学ぶ<%= lang_jp %></p>
          </div>
          <div class="card-body">
            <p class="card-text"><%= message2 %></p>
          </div>
        </div>
        <p class="text-center"><< 利用したい教材モジュールを選択してください</p>
      </div>
    </div>
  </main>
  <footer><%- include('../partials/footer') %></footer>
  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script type="text/javascript">
    let set_obj = <%- JSON.stringify(sidebar_setting) %>;
    for(key in set_obj){
      if (set_obj[key] === "disable") {
        claerAll(key)
      } else if (set_obj[key] === "no-choice") {
        clearList(key)
      } else if (typeof set_obj[key] != String) {
        for(const i of set_obj[key])
        $("#"+key).find("ul").append(
        '<li><a href="#" class="nav-link link-dark text-decoration-none rounded sidebar-link"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-right-fill" viewBox="0 0 16 16"><path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/></svg><small>'+i+'</small></a></li>'
      )
      }
    }
    function claerAll(key){
      $("#"+key).find("h6").removeClass("fw-bold")
      $("#"+key).find("h6").addClass("text-decoration-line-through")
      $("#"+key).find("a").css('pointer-events', 'none').attr('tabindex', -1);
      $("#"+key).find("ul").remove();
    }
    function clearList(key){
      $("#"+key).find("ul").remove();
    }
  </script>
</body>
</html>
